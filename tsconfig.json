{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES3",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "strictNullChecks": true,
    "noImplicitThis": false,
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
