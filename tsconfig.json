{
  "compilerOptions": {
    "module": "ESNext",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "outDir": "./types",
    "baseUrl": ".",
    "strictNullChecks": true,
    "noImplicitThis": false
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
